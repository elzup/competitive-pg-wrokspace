{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noImplicitReturns": true,
    "downlevelIteration": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
  },
  "include": [ "**/*.ts" ],
  "exclude": [
    "node_modules"
  ]
}